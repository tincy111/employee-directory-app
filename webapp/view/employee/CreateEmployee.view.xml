<mvc:View
    controllerName="sap.ui.demo.nav.controller.employee.CreateEmployee"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="createEmployee"
        title="{i18n>CreateEmployee}"
        showNavButton="true"
        navButtonPress=".onNavBack"
        class="sapUiResponsiveContentPadding"
    >
       <content>
					<f:SimpleForm
						minWidth="1024"
						editable="false"
						layout="ResponsiveGridLayout"
            labelSpanL="3"
                labelSpanM="3"
                emptySpanL="1"
                emptySpanM="1"
                columnsL="4"
                columnsM="2"
            >
						<f:content>
							<Label text="{i18n>formFirstName}"/>
              <Input value="{Employees>EmployeeID}"/>
							<Label text="{i18n>formLastName}"/>
							<Input value="{Employees>EmployeeID}"/>
							<Label text="{i18n>formAddress}"/>
							<Input value="{Employees>EmployeeID}"/>
							<Label text="{i18n>formCity}"/>
							<Input value="{Employees>EmployeeID}"/>
							<Label text="{i18n>formPostalCode}"/>
							<Input value="{Employees>EmployeeID}"/>
							<Label text="{i18n>formPhoneHome}"/>
							<Input value="{Employees>EmployeeID}"/>
							<Label text="{i18n>formCountry}"/>
							<Input value="{Employees>EmployeeID}"/>
              <Label text="{i18n>formComboBox1}"/>
              	<ComboBox
			>
				<core:Item key="{key}" text="{text}" />
			</ComboBox>
						</f:content>
					</f:SimpleForm>
				</content>
    </Page>
</mvc:View>
